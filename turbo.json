{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "dotEnv": [".env.development", ".env"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "format": {
      "dependsOn": ["^format"]
    },
    "format:write": {
      "dependsOn": ["^format:write"]
    },
    "dev": {
      "dotEnv": [".env.development", ".env"],
      "cache": false,
      "persistent": true
    }
  }
}
